################### Default #############################################

if [ ! "$1" ]
then

	echo 'ì‚¬ìš©ë²• : first1 [Tableëª…] (DBëª…) (ì¡°íšŒí•  í–‰ ìˆ˜)'

else

	if [ ! "$3" ]
	then export rows=1
	else export rows=$3
	fi

	dbaccess $dbname<<!
		set isolation to dirty read;
		select first $rows * from $1;
!

